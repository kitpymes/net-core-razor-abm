@page
@model SolicitarPermisoModel
@{
    ViewData["Title"] = "Solicitar Permiso";
}

<div class="container d-flex justify-content-center">
    <div class="card w-50">
        <div class="card-body">
            <h5 class="card-title">Nuevo Permiso</h5>

            <hr />

            <div class="col-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Permiso.NombreEmpleado" class="control-label"></label>
                        <input asp-for="Permiso.NombreEmpleado" class="form-control" />
                        <span asp-validation-for="Permiso.NombreEmpleado" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Permiso.ApellidoEmpleado" class="control-label"></label>
                        <input asp-for="Permiso.ApellidoEmpleado" class="form-control" />
                        <span asp-validation-for="Permiso.ApellidoEmpleado" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Permiso.TipoPermisoId" class="control-label"></label>
                        <select asp-for="Permiso.TipoPermisoId" class="form-control">
                            <option value="1">Enfermedad</option>
                            <option value="2">Licencia</option>
                            <option value="3">Trámites</option>
                        </select>
                        <span asp-validation-for="Permiso.TipoPermisoId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Permiso.FechaPermiso" class="control-label"></label>
                        <input asp-for="Permiso.FechaPermiso" class="form-control" />
                        <span asp-validation-for="Permiso.FechaPermiso" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Crear" class="btn btn-primary" /> |
                        <a asp-page="./Index">Cancelar</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
